<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="pu1" transaction-type="JTA">
        <jta-data-source>distribuida</jta-data-source>
        <class>com.programacion.distribuida.authors.model.Author</class>
        <class>com.programacion.distribuida.authors.model.BookAuthor</class>
        <class>com.programacion.distribuida.authors.model.BookAuthorId</class>

        <properties>
            <property name="hibernate.column_ordering_strategy" value="legacy"/>

            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
